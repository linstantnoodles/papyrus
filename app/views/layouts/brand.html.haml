!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title LINISNIL
    = csrf_meta_tags
    %meta{:charset => "UTF-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "http://gmpg.org/xfn/11", :rel => "profile"}/
    %title Alan Lin's Blog
    %meta{:content => "noindex,follow", :name => "robots"}/
    %link{:href => "//fonts.googleapis.com", :rel => "dns-prefetch"}/
    %link#animate-css{:href => "https://wp-themes.com/wp-content/themes/total/css/animate.css?ver=1.0", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#font-awesome-css{:href => "https://wp-themes.com/wp-content/themes/total/css/font-awesome.css?ver=4.4.0", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#owl-carousel-css{:href => "https://wp-themes.com/wp-content/themes/total/css/owl.carousel.css?ver=1.3.3", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#nivo-lightbox-css{:href => "https://wp-themes.com/wp-content/themes/total/css/nivo-lightbox.css?ver=1.3.3", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#superfish-css{:href => "https://wp-themes.com/wp-content/themes/total/css/superfish.css?ver=1.3.3", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#total-style-css{:href => "https://wp-themes.com/wp-content/themes/total/style.css?ver=1.0", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    %link#total-fonts-css{:href => "//fonts.googleapis.com/css?family=Pontano+Sans|Oswald:400,700,300&subset=latin,latin-ext", :media => "all", :rel => "stylesheet", :type => "text/css"}/
    = stylesheet_link_tag 'brand', media: 'all', 'data-turbolinks-track': 'reload'
  %body.home.blog.columns-3.single.single-post{:style => "background-attachment: scroll;", id: controller.action_name}
    #ht-page
      %header#ht-masthead.ht-site-header
        .ht-container.ht-clearfix
          #ht-site-branding
            %h1.ht-site-title
              %a{:href => "http://linisnil.com", :rel => "home"} LINISNIL
            %p.ht-site-description
              %a{:href => "http://linisnil.com", :rel => "home"} Alan Lin's blog on software
          / .site-branding
          %nav#ht-site-navigation.ht-main-navigation
            .toggle-bar
              %span
            .ht-menu.ht-clearfix{:style => "display: none;"}
              %ul.sf-js-enabled.sf-arrows
                %li.page_item.page-item-2
                  %a{:href => "/about"} About
            / #ht-site-navigation
        / #ht-masthead
    #ht-content.ht-site-content.ht-clearfix
      = yield